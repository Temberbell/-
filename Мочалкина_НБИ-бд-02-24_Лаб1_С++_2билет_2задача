#include <iostream>
using namespace std;

int main()
{
 int a, b, c;
 
 cout << "Введите высоту параллелепипеда: ";
 cin >> a; 
 
 cout << "Введите ширину параллелепипеда: ";
 cin >> b; 
 
 cout << "Введите длину параллелепипеда: ";
 cin >> c; 
 
 int Sb, V;
 
 V = a*b*c;
 Sb = 2*a*b + 2*a*c;
 
 cout << "Объём параллелепипеда равен " << V << endl
   << "Площадь боковой поверхности равна " << Sb;
 }
